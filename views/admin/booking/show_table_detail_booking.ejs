<div class="card shadow mb-4 mt-2">
    <div class="card-header py-3">
        <a href="/admin/booking" class="btn btn-warning">Back</a>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-4">
                <img src="https://iam-admin-staycation.herokuapp.com/<%= booking.payments.proofPayment %>" alt="proofPayment"
                    style="width: 100%; display:block;">

                <div class="row ml-1 mt-2">
                    <% if(booking.payments.status == "Proses"){ %>
                    <form action="/admin/booking/<%= booking.id %>/confirmation?_method=PUT" method="POST">
                        <button type="submit" class="btn btn-success"><i class="fas fa-check"></i> Confirm</button>
                    </form>
                    <form action="/admin/booking/<%= booking.id %>/rejection?_method=PUT" method="POST" class="ml-2">
                        <button type="submit" class="btn btn-danger"><i class="fas fa-times"></i> Reject</button>
                    </form>
                    <% } %>
                </div>
            </div>
            <div class="col-md-8">
                <!-- DataTales -->
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-bordered" id="activity-table" width="100%" cellspacing="0">
                            <thead>
                                <tr>
                                    <th>Member Name</th>
                                    <th>Total</th>
                                    <th>Bank From</th>
                                    <th>Title</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr>
                                    <td><%= booking.memberId.firstName %> <%= booking.memberId.lastName %></td>
                                    <td>$<%= booking.total %></td>
                                    <td><%= booking.payments.bankFrom %> <br> <%= booking.payments.accountHolder %></td>
                                    <td><%= booking.itemId.title %></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
            <!-- End DataTables -->
        </div>
    </div>
</div>