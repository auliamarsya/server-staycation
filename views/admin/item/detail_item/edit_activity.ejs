<!-- Modal -->
<div class="modal fade" id="activityModalEdit" tabindex="-1" role="dialog" aria-labelledby="activityModalEditLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="activityModalEditLabel">Edit Activity</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form method="POST" action="/admin/item/edit/activity?_method=PUT" enctype="multipart/form-data">
                <div class="modal-body">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="text" class="form-control name" id="Name" name="name" placeholder="Enter name" required>
                    </div>
                    <div class="form-group">
                        <label for="type">Type</label>
                        <input type="text" class="form-control type" id="type" name="type" placeholder="Enter type" required>
                    </div>
                    <div class="form-group">
                        <label for="image">Image</label>
                        <input type="file" class="form-control image" id="image" name="image">
                        <span>Pilih gambar untuk update image</span>
                    </div>
                </div>
                <div class="modal-footer">
                    <input type="hidden" class="id" name="id">
                    <input type="hidden" class="itemId" name="itemId">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Update</button>
                </div>
            </form>
        </div>
    </div>
</div>