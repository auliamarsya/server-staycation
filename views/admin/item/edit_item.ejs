<div class="tab-pane fade show active" id="edit-item" role="tabpanel" aria-labelledby="edit-item-tab">
    <div class="card shadow mb-4 mt-2">
        <div class="card-body">
            <form action="/admin/item?_method=PUT" method="POST" enctype="multipart/form-data">
                <input type="text" class="form-control" name="id" value="<%= item._id %>" hidden>
                <div class="form-group">
                    <label for="name">Title</label>
                    <input type="text" class="form-control" name="title" placeholder="Enter title" value="<%= item.title %>" required>
                </div>
                <div class="form-group">
                    <label for="name">Price</label>
                    <input type="number" class="form-control" name="price" placeholder="Enter price" value="<%= item.price %>" required>
                </div>
                <div class="form-group">
                    <label for="name">City</label>
                    <input type="text" class="form-control" name="city" placeholder="Enter city" value="<%= item.city %>" required>
                </div>
                <div class="form-group">
                    <label for="name">Category</label>
                    <select class="form-control" name="categoryId">
                        <option value="">--- Category ---</option>
                        <% Object.keys(category).forEach(key => { %>
                            <% if(category[key].id == item.categoryId){ %>
                                <option value="<%= category[key].id %>" selected><%= category[key].name %></option>
                            <% } else { %>
                                <option value="<%= category[key].id %>"><%= category[key].name %></option>
                            <% } %>
                        <% }); %>
                    </select>
                </div>
                <div class="form-group">
                    <label for="name">Image</label>
                    <input type="file" class="form-control" name="image" multiple>
                </div>
                <div class="form-group">
                    <label for="name">Description</label>
                    <textarea name="about" class="form-control">
                        <%= item.description %>
                    </textarea>
                </div>
                <button type="submit" class="btn btn-primary">Save</button>
            </form>
        </div>
    </div>
</div>